<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>make-assembly</id>

  <formats>
    <!-- <format>tar.gz</format> <format>tar.bz2</format> -->
    <format>zip</format>
  </formats>

  <fileSets>

    <!-- Include src folder -->
    <fileSet>
      <directory>${project.build.sourceDirectory}</directory>
      <outputDirectory>./src</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Include resource folder -->
    <fileSet>
      <directory>${project.build.resourceDirectory}</directory>
      <outputDirectory>./resources</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Include test folder -->
    <fileSet>
      <directory>${project.build.testDirectory}</directory>
      <outputDirectory>./test</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Include scripts individually -->
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}</directory>
      <outputDirectory>./scripts</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <filtered>true</filtered>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/site</directory>
      <outputDirectory>docs</outputDirectory>
    </fileSet>

    <!-- Include the created JAR file -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>*.jar</include> <!-- ${project.build.finalName} -->
      </includes>
    </fileSet>

  </fileSets>


  <!-- Include individual files -->
  <files>
    <file>
      <outputDirectory>./</outputDirectory>
      <source>README.md</source>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <outputDirectory>./</outputDirectory>
      <source>LICENSE</source>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <outputDirectory>./</outputDirectory>
      <source>THIRD-PARTY.txt</source>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
    <!-- Also include NOTICE, AUTHORS ... -->
  </files>


  <!-- =================================================================== -->
  <!-- Include third-party libs -->
  <!-- =================================================================== -->

  <dependencySets>
    <dependencySet>
      <outputDirectory>./</outputDirectory>
      <unpack>false</unpack>
      <includes>
        <include>${artifact}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>./lib</outputDirectory>
      <unpack>false</unpack>
      <excludes>
        <exclude>${artifact}</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

</assembly>
